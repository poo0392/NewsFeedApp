<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/news_background"
    android:orientation="vertical"
    tools:context="com.org.apnanews.LanguageSelection">


    <LinearLayout
        android:layout_marginTop="100dp"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/linearLayout"
        android:layout_above="@+id/lang_next"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="25dp">


        <include android:id="@+id/lang_spinner_layout"
            layout="@layout/spinner_layout"
            />

    </LinearLayout>

    <TextView
        android:padding="10dp"
        android:gravity="center|right"
        android:id="@+id/lang_next"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/next_text"
        android:textSize="20sp"
        android:textColor="@android:color/black"
        android:drawableRight="@mipmap/ic_keyboard_arrow_right_black_36dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="213dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true" />


</LinearLayout>
